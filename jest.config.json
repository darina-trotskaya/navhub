{
    "collectCoverage": true,
    "moduleNameMapper": {
        "^components/(.*)": "<rootDir>/src/components/$1",
        "^hooks/(.*)": "<rootDir>/src/hooks/$1",
        "^utils/(.*)": "<rootDir>/src/utils/$1",
        "\\.css$": "identity-obj-proxy"
    },
    "transform": {
        "^.+\\.tsx?$": "ts-jest"
    },
    "globals": {
        "ts-jest": {
            "tsconfig": "tsconfig.jest.json"
        }
    }
}
